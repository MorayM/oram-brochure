---
import HeaderLink from './HeaderLink.astro'
import { Image } from 'astro:assets'
import logo from '../images/logo-only-transparent.png'
import SocialLinks from './SocialLinks.astro'
---

<header>
  <nav>
    <a href="/" class="logo-link tablet-hide">
      <Image src={logo} alt="The logo of the Devizes Daphne Oram Festival" />
    </a>
    <div class="internal-links desktop-links">
      <HeaderLink href="/">Home</HeaderLink>
      <!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
      <HeaderLink href="/about">About</HeaderLink>
    </div>

    <!-- Mobile hamburger button -->
    <button class="hamburger mobile-only" aria-label="Toggle navigation menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <div class="social-links phone-hide">
      <SocialLinks />
    </div>
  </nav>

  <!-- Mobile menu -->
  <div class="mobile-menu">
    <div class="mobile-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="mobile-social">
      <SocialLinks />
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function () {
    const hamburger = document.querySelector('.hamburger')
    const mobileMenu = document.querySelector('.mobile-menu')

    if (hamburger && mobileMenu) {
      // Toggle menu
      hamburger.addEventListener('click', function () {
        hamburger.classList.toggle('active')
        mobileMenu.classList.toggle('active')
      })

      // Close menu when clicking on a link
      mobileMenu.addEventListener('click', function (e) {
        if (e.target && (e.target as HTMLElement).tagName === 'A') {
          hamburger.classList.remove('active')
          mobileMenu.classList.remove('active')
        }
      })
    }
  })
</script>

<style>
  header {
    margin: 0;
    padding-inline: 1rem;
    background: var(--bg-light);
    box-shadow: 0 2px 8px rgba(var(--bg-dark), 5%);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav .internal-links {
    display: flex;
    gap: 0;
  }

  nav .internal-links a {
    padding: 1rem 0.8rem 0.8rem;
    color: var(--dark-purple);
    border-top: 0.2rem solid transparent;
    border-bottom: 0.2rem solid transparent;
    text-decoration: none;
    transition: all var(--animation-duration) var(--animation-easing);
    position: relative;
  }

  nav .internal-links a.active,
  nav .internal-links a.active:hover {
    border-bottom-color: var(--purple);
    transform: translateY(-1px);
  }

  nav .internal-links a:hover {
    /* border-bottom-color: var(--accent-dark); */
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(var(--dark-purple), 0.3);
  }

  nav img {
    height: 2rem;
    width: auto;
    transition: transform var(--animation-duration) var(--animation-bounce);
  }

  nav img:hover {
    transform: scale(1.1) rotate(2deg);
  }

  .social-links,
  .social-links a {
    display: flex;
    line-height: 1;
  }

  .social-links {
    gap: 1rem;
  }

  .social-links a {
    transition: all var(--animation-duration) var(--animation-easing);
    border-radius: 50%;
    padding: 0.25rem;
  }

  .social-links a:hover {
    transform: translateY(-3px) scale(1.1);
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 12px rgba(var(--purple), 0.4);
  }

  /* Hamburger menu styles */
  .hamburger {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 0.25rem;
    transition: transform var(--animation-duration) var(--animation-easing);
  }

  .hamburger:hover {
    transform: scale(1.1);
  }

  .hamburger-line {
    width: 1.5rem;
    height: 0.125rem;
    background-color: var(--bg-dark);
    transition: all 0.3s var(--animation-easing);
    transform-origin: center;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: translateY(0.375rem) rotate(45deg);
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scale(0);
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: translateY(-0.375rem) rotate(-45deg);
  }

  /* Mobile menu styles */
  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--bg-light);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s var(--animation-easing);
    backdrop-filter: blur(10px);
  }

  .mobile-menu.active {
    max-height: 24rem;
    box-shadow: 0 8px 24px rgba(var(--bg-dark), 0.3);
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    padding: 0;
  }

  .mobile-links a {
    padding: 0.75rem 1rem;
    color: var(--dark-purple);
    text-decoration: none;
    border-bottom: 1px solid rgba(var(--bg-dark), 0.1);
    transition: all var(--animation-duration) var(--animation-easing);
    opacity: 0;
    transform: translateX(-20px);
  }

  .mobile-menu.active .mobile-links a {
    opacity: 1;
    transform: translateX(0);
  }

  .mobile-menu.active .mobile-links a:nth-child(1) {
    transition-delay: 0.1s;
  }
  .mobile-menu.active .mobile-links a:nth-child(2) {
    transition-delay: 0.15s;
  }
  .mobile-menu.active .mobile-links a:nth-child(3) {
    transition-delay: 0.2s;
  }
  .mobile-menu.active .mobile-links a:nth-child(4) {
    transition-delay: 0.25s;
  }
  .mobile-menu.active .mobile-links a:nth-child(5) {
    transition-delay: 0.3s;
  }

  .mobile-links a:last-child {
    border-bottom: none;
  }

  .mobile-links a:hover,
  .mobile-links a.active {
    color: var(--accent);
    transform: translateX(10px);
    background: rgba(255, 255, 255, 0.05);
  }

  .mobile-social {
    padding: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    opacity: 0;
    transform: translateY(20px);
    transition: all var(--animation-duration) var(--animation-easing);
  }

  .mobile-menu.active .mobile-social {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.35s;
  }

  /* Hide mobile elements by default */
  .mobile-only {
    display: none;
  }

  @media (max-width: 940px) {
    .tablet-hide {
      display: none;
    }
    .social-links > a > svg {
      line-height: 24px;
    }
  }

  @media (max-width: 940px) {
    .phone-hide {
      display: none;
    }

    /* Hide desktop navigation, show mobile elements */
    nav .internal-links.desktop-links {
      display: none;
    }

    .mobile-only,
    .mobile-menu {
      display: flex;
    }

    .mobile-menu {
      display: block;
    }

    /* Show logo on mobile */
    .logo-link.tablet-hide {
      display: block;
    }

    nav {
      width: 100%;
      justify-content: space-between;
      min-height: 3.5rem;
    }
    .mobile-links a {
      padding: 1rem;
    }
  }
</style>
